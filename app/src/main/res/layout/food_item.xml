<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foodImage"
        android:src="@drawable/rendang"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/foodName"
        android:layout_toEndOf="@id/foodImage"
        android:text="Food Name"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/foodDesc"
        android:layout_below="@id/foodName"
        android:layout_toEndOf="@id/foodImage"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Bakso adalah makanan yang terbuat dari daging pilihan dan merupakan makanan enak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/BannerRating"
        android:layout_below="@id/foodDesc"
        android:layout_toEndOf="@id/foodImage"
        android:src="@drawable/star"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/foodRate"
        android:layout_below="@id/foodDesc"
        android:layout_toEndOf="@id/BannerRating"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="4.5"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/foodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodName"
        android:layout_marginStart="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/foodImage"
        android:text="Food Price"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>